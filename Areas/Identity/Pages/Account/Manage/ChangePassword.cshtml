@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizerFactory LocalizerFactory
@model ChangePasswordModel
@{
    var Localizer = LocalizerFactory.Create("Strings", "LetterKnowledgeAssessment");
    ViewData["Title"] = @Localizer["ChangePassword"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    ViewData["SidebarActive"] = ActivePage.Profile;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post">
            
            <div class="form-floating">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">@Localizer["CurrentPassword"]</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">@Localizer["NewPassword"]</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">@Localizer["RepeatPassword"]</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 mt-2 btn btn-lg btn-primary">@Localizer["ChangePassword"]</button>
        </form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
