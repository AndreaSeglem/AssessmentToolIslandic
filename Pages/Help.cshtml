@page
@using Microsoft.Extensions.Localization
@model LetterKnowledgeAssessment.Pages.InfoModel
@inject IStringLocalizerFactory LocalizerFactory
@{
    var Localizer = LocalizerFactory.Create("Strings", "LetterKnowledgeAssessment");
    ViewData["Title"] = Localizer["Help"];
}
<div class="text-center">
    <h1 class="display-4">@Localizer["Help"]</h1>
</div>

<hr />
<div class="col-12">
    <div class="card">
        <div class="card-body">

            <div class="accordion" id="accordionInstuctions">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="letterAssessment">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                            @Localizer["HowDoTest"]
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionInstuctions">
                        <div class="accordion-body" style="height:450px; overflow-y:auto">

                            <div class="col">
                                <p><strong>@Localizer["Step"] 1</strong> @Localizer["NavToTest"]</p>
                                <img class="step-img" src="/img/letterAssessmentActiveNav.png" />
                            </div>
                            <div class="col">
                                <p><strong>@Localizer["Step"] 2</strong> @Localizer["ChooseLargeOrSmall"]</p>
                                <img class="step-img" src="/img/upperCaseSelected.png" /><img class="step-img" src="/img/lowerCaseSelected.png" />
                            </div>


                            <div class="col">
                                <p><strong>@Localizer["Step"] 3</strong> @Localizer["ChooseStudentStart"]</p>
                                <img class="step-img" src="/img/pupilSelectedStartActive.png" />
                            </div>


                            <div class="col">
                                <p><strong>@Localizer["Step"] 4</strong> @Localizer["TestStudent"]</p>
                                <img class="step-img" src="/img/letterTestStart.png" />
                            </div>

                            <div class="col">
                                <p><strong>@Localizer["Step"] 5</strong> @Localizer["RepeatStep4"]</p>
                                <img class="step-img" src="/img/letterTestEnd.png" />
                            </div>
                            <div class="col">
                                <p><strong>@Localizer["Step"] 6</strong> @Localizer["FinishedPlaceStudent"]</p>
                                <ul>
                                    <li><b style="color:red;">@Localizer["Level1"]:</b> @Localizer["ExplainLevel1"]</li>
                                    <li><b style="color:orange">@Localizer["Level2"]:</b> @Localizer["ExplainLevel2"]</li>
                                    <li><b style="color:green">@Localizer["Level3"]:</b> @Localizer["ExplainLevel3"]</li>
                                </ul>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="createClassList">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            @Localizer["HowToCreateClass"]
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionInstuctions">
                        <div class="accordion-body" style="height:450px; overflow-y:auto">
                            <div class="col">
                                <p><strong>@Localizer["Step"] 1</strong> @Localizer["NavToClass"]</p>
                                <img class="step-img" src="/img/classListActiveNav.png" />
                            </div>
                            <div class="col">
                                <p><strong>@Localizer["Step"] 2</strong> @Localizer["ClickAddButton"]</p>
                                <img class="step-img" src="/img/plusbtn.png" />
                            </div>

                            <div class="col">
                                <p><strong>@Localizer["Step"] 3</strong> @Localizer["ChooseNameCreateClass"]</p>
                                <img class="step-img" src="/img/createClassList.png" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="addPupils">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            @Localizer["HowToAddStudents"]
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionInstuctions">
                        <div class="accordion-body" style="height:450px; overflow-y:auto">

                            <div class="col">
                                <p><strong>@Localizer["Step"] 1</strong> @Localizer["NavToStudents"]</p>
                                <img class="step-img" src="/img/pupilsActiveNav.png" />
                            </div>
                            <div class="col">
                                <p><strong>@Localizer["Step"] 2</strong> @Localizer["ClickAddStudentsButton"]</p>
                                <img class="step-img" src="/img/pupilsAddButton1.png" />
                                <img class="step-img" src="/img/pupilsAddBUtton2.png" />
                            </div>

                            <div class="col">
                                <p><strong>@Localizer["Step"] 3</strong> @Localizer["ChooseNumberStudents"]</p>
                                <img class="step-img" src="/img/addPupils.png" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>