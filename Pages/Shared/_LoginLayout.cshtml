<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
@using Microsoft.Extensions.Localization
@using System.Globalization
@inject IStringLocalizerFactory LocalizerFactory

@{
    var Localizer = LocalizerFactory.Create("Strings", "LetterKnowledgeAssessment");
}
@{
    var currentCulture = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] @Localizer["FromA-AA"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LetterKnowledgeAssessment.styles.css" asp-append-version="true" />
    <link id="dynamic-favicon" rel="icon" type="image/x-icon" href="@(CultureInfo.CurrentCulture.Name == "is" ? "/img/favicon_is.ico" : "/img/favicon_no.ico")">
</head>
<style>
    body{
        background-color: #05386B;
        height:100%;
    }
    html{
        height:100%;
    }
</style>
<body>
    <div class="container-100">        
            @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>